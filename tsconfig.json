{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "examples", "dist", "docs"]
}
